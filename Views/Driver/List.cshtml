@model IEnumerable<Driver>

@{
    ViewData["Title"] = "Motoristas";
}

<section class="title">
    <h1>Motoristas</h1>
    <span class="children-end">
        <a asp-controller="Driver"
           asp-action="Create" class="btn btn-primary">Adicionar Novo</a>
    </span>
</section>
        
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Código Caminhão
            </th>
            <th>
                CEP do motorista
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                <a asp-controller="Driver"
                   asp-action="Edit"
                   asp-route-idBook="@item.Id" class="btn btn-secondary btn-base">Editar</a>
                <a asp-controller="Driver"
                   asp-action="Details"
                   asp-route-idBook="@item.Id" class="btn btn-secondary btn-base">Detalhes</a>
                <a asp-controller="Driver"
                   asp-action="Remove"
                   asp-route-idBook="@item.Id" class="btn btn-secondary btn-base">Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
