@model Driver

@{
    ViewData["Title"] = "Details";
}

<section class="title">
    <h2>Detalhes do Motorista</h2>
    <span class="children-end">
        <a asp-controller="Driver"
           asp-action="List" class="btn btn-primary">Voltar</a>
    </span>
</section>

<div>
    <dl class="row distance-top-default">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
    </dl>
    <h5 class="distance-top-default">Caminhão</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Código Caminhão
        </dt>
        <dd class="col-sm-10">
            @Model.Truck.Id
        </dd>
        <dt class="col-sm-2">
            Marca
        </dt>
        <dd class="col-sm-10">
            @Model.Truck.Brand
        </dd>
        <dt class="col-sm-2">
            Modelo
        </dt>
        <dd class="col-sm-10">
            @Model.Truck.Model
        </dd>
    </dl>
    <section class="title distance-top-default">
        <h5>Viagens</h5>
        <span class="children-left">
            <a asp-controller="Travel"
               asp-action="Create"
               asp-route-idDriver="@Model.Id" class="btn btn-success msg-ok">Adicionar</a>
        </span>
    </section>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Início Viagem
                </th>
                <th>
                    Local Saída
                </th>
                <th>
                    Local Chegada
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var travel in Model.Travels)
            {
                <tr>
                    <td>
                        @travel.StartTravel
                    </td>
                    <td>
                        @travel.DeliveryPlace
                    </td>
                    <td>
                        @travel.ExitPlace
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
